DATABASE_URL=postgresql://user:password@localhost:5432/project_connect
JWT_SECRET=your_jwt_secret

# Enable test-mode behavior for OAuth/MFA endpoints (tokens without external providers)
OAUTH_TEST_MODE=false

# Google OAuth (full implementation)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Redirect URI registered in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/oauth/google/callback

# Apple Sign-In (full implementation)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
# Store PKCS8 private key base64-encoded, or point your app to a secure location
APPLE_PRIVATE_KEY_BASE64=

# MFA (full implementation)
# Issuer name used for TOTP apps (e.g., Google Authenticator)
MFA_ISSUER=ProjectConnect